#include<stdio.h>
int main (){
    int num, sum=0,rem=0;
    printf("Enter tne number to get sum of digits:");
    scanf("%d",&num);

   (num > 0){
        rem =num%10; // 654%10 = 4
        sum = sum *10+rem; // sum = 0 + 6 =6
        num = num/10;
        printf("sum of digits =%d",sum);
        printf("sum of digits =%d",sum);
        }while(num > 0){
        return 0;

}